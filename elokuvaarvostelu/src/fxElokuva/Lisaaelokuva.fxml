              </rowConstraints>
               <children>
                  <Label text="Elokuvan nimi:" />
                  <Label text="Kesto:" GridPane.rowIndex="1" />
                  <Label text="Ikäraja:" GridPane.rowIndex="2" />
                  <Label text="Kuvaus:" GridPane.rowIndex="3" />
                  <TextArea GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField promptText="anna minuuteissa" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField promptText="anna nimi" GridPane.columnIndex="1" />
               </children>
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
            </GridPane>
         </top>
      </BorderPane>
   </left>
